<section class="channel-header">
    <img class="channel-banner" src="<%= channelInfo.channel_banner %>" alt="<%= channelInfo.channel_name %>">

    <div class="channel-info">
        <div class="channel-left">
            <img class="channel-profile" src="<%= channelInfo.channel_profile %>" alt="<%= channelInfo.channel_name %>">
            <div class="channel-text">
                <h2 class="channel-owner"><%= channelInfo.channel_name %></h2>
                <p class="channel-subscription"><%= channelInfo.subscribers.toLocaleString() %> subscribers</p>
            </div>
        </div>
        <button class="subscribe-btn">SUBSCRIBE</button>
    </div>
    
    <nav class="channel-nav">
        <div class="nav-scroll-wrapper">
            <!-- 왼쪽 버튼 -->
            <button class="scroll-tab-btn scroll-tab-left">
                <img src="/assets/icons/Top-Menu.svg" alt="←">
            </button>
        
            <!-- 스크롤 가능한 탭 컨테이너 -->
            <div class="nav-links-scrollable">
                <div class="nav-links">
                    <a href="/channel/<%= channelInfo.id %>/Home" class="<%= activeTab === 'Home' ? 'active' : '' %>">Home</a>
                    <a href="/channel/<%= channelInfo.id %>/Videos" class="<%= activeTab === 'Videos' ? 'active' : '' %>">Videos</a>
                    <a href="/channel/<%= channelInfo.id %>/Podcasts" class="<%= activeTab === 'Podcasts' ? 'active' : '' %>">Podcasts</a>
                    <a href="/channel/<%= channelInfo.id %>/Playlists" class="<%= activeTab === 'Playlists' ? 'active' : '' %>">Playlists</a>
                    <a href="/channel/<%= channelInfo.id %>/Posts" class="<%= activeTab === 'Posts' ? 'active' : '' %>">Posts</a>                    
                    
                    <div class="search-container">
                        <div class="search-icon" id="searchIcon">
                            <img src="/assets/icons/search.svg" alt="Search">
                        </div>
                        <form action="/channel/<%= channelInfo.id %>/Search" method="get">
                            <input 
                                type="text" 
                                name="query" 
                                class="search-input <%= typeof query !== 'undefined' && query ? 'active' : '' %>" 
                                id="searchInput" 
                                placeholder="Search"
                                value="<%= typeof query !== 'undefined' ? query : '' %>">
                        </form>
                    </div>                                        
                </div>
            </div>
        
            <!-- 오른쪽 버튼 -->
            <button class="scroll-tab-btn scroll-tab-right">
                <img src="/assets/icons/Top-Menu.svg" alt="→">
            </button>
        </div>
    </nav>
</section>