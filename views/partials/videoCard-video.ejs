<article>
    <!-- 썸네일 클릭 → 비디오 페이지 이동 -->
    <a href="/video?id=<%= video.id %>">
        <figure class="video-thumbnail video-card">
            <img class="thumbnail" src="<%= video.thumbnail %>" alt="video thumbnail">
            
            <video class="preview" muted loop preload="none">
                <source src="https://storage.googleapis.com/youtube-clone-video/<%= video.id %>.mp4" type="video/mp4">
                Your browser does not support the video tag.
            </video>
        </figure>
    </a>

    <!-- 설명 부분 -->
    <figcaption class="video-meta">
        <div class="video-description">
            <!-- 제목 클릭 → 비디오 페이지 이동 -->
            <a href="/video?id=<%= video.id %>">
                <span class="video-title"><%= video.title %></span><br>
            </a>
            <!-- 채널 이름 클릭 → 채널 페이지 이동 -->
            <a href="/channel/<%= video.channel.id %>/Home">
                <span class="channel-name"><%= video.channel.channel_name %></span><br>
            </a>
            <!-- 조회수, 날짜 (비디오 페이지로 이동) -->
            <a href="/video?id=<%= video.id %>">
                <span class="view"><%= formatViews(video.views) %> views • <%= getRelativeTime(video.created_dt) %></span>
            </a>
        </div>
    </figcaption>
</article>